<%-include('partials/_header')%>
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit a Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your amazing recipies with thousands of web developers accross the world. Fill our form to get started.</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-8">
        <form action="/photos/add" method="post">
            <div class="row g-3">
                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email">
                </div>
                  <div class="col-12">
                    <label for="name" class="form-label">Recipe name</label>
                    <input type="text" name="name" class="form-control" id="name">
                </div>
                  <div class="col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" cols="30" rows="4" name="description" id="description"></textarea>
                </div>
                <div class="col-12">
                   <label for="indegredients" class="form-label">Indegredients</label>
                   <small>Example: <i>2 cups of ice cube</i></small>
                   <div class="ingredientList">
                    <div class="ingredientDiv mb-1">
                        <input type="text" class="form-control" name="indegredients">
                    </div>
                   </div>
               </div>
                <div class="col-12">
                   <button class="btn btn-outline-primary" type="button" id="addIngredientsBtn">+ Ingredient</button>
               </div>
                <div class="col-12">
                    <label for="category">Category</label>
                    <select name="category" class="form-select form-control" aria-label="Category">
                        <option selected disabled="disabled">Select Category</option>
                        <option value="Thai">Thai</option>
                        <option value="American">American</option>
                        <option value="Chinese">Chinese</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Indian">Indian</option>
                        <option value="Turkish">Turkish</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image">Image of recipe</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>

                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Submit Recipe</button>
                </div>
            </div>
        </form>
    </div>
</div>